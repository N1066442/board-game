</head>
   
<body>
    <!--**************************-->
    <div class="container">    
        <!--~~~~~~~~~~~~~~~~~-->
        <div class="header">           
        </div>        
        
        <!--~~~~~~~~~~~~~~~~~-->        
        <ul id="navigation">        
            <li><a href="/">返回主頁</a></li> 
        </ul>
        
        <!--~~~~~~~~~~~~~~~~~--> 
        <div class="content">

             <h2>查看店家資訊</h2>

                <table>
                    <thead>
                        <tr>
                            <th width="10%">店家名稱</th>
                            <th width="20%">店家地址</th>
                            <th width="15%">電話號碼</th>
                            <th width="10%">營業時間</th>
                            <th width="5%">wifi</th>
                            <th width="5%">插座</th>
                            <th width="10%">提供餐點</th>
                            <th width="5%">外食</th> 
                            <th width="20%">收費標準</th>                         
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<items.length; i++) {%>
                            <tr>
                                <td><%= items[i].storeID %></a></td>
                                <td><%= items[i].storeAddress %></td>
                                <td><%= items[i].phoneNo %></td>
                                <td><%= items[i].businessHours %></td>
                                <td><%= items[i].wifi %></td>  
                                <td><%= items[i].socket %></td>
                                <td><%= items[i].provideMeals %></td>
                                <td><%= items[i].outsideFood %></td>
                                <td><%= items[i].chargingStandards %></td>                      
                            </tr> 
                        <% } %> 
                    </tbody>
                </table>   
              
               
        </div>       
        
        <!--~~~~~~~~~~~~~~~~~--> 
        <div class="footer">
            NTUB imd, 2019.    
        </div>  
    </div>
